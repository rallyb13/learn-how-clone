<h1><%= @lesson.name %></h1>

<article><%= @lesson.content %></article>

<div>
  <p><%= link_to "Edit This Lesson", edit_lesson_path, class: "btn btn-info btn-sm" %></p>
  <p><%= link_to "Delete This Lesson", lesson_path(@lesson), class: "btn btn-danger btn-sm", :data => {:confirm => "Are you suuuure?", :method => "delete"}%></p>
</div>

<div>
  <p><%= link_to "Previous Lesson", lesson_path(@lesson.previous) %></p>
  <p><%= link_to "Back to all lessons", lessons_path %></p>
  <p><%= link_to "Next Lesson", lesson_path(@lesson.next) %></p>
</div>


<% content_for(:footer, "?") %>
